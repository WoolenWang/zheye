<% if detail %>

<% else %>

    <div class="am-u-sm-3">
      <div style="width: 50px; float: right; text-align: center; padding-top: 5px; padding-right: 20px;">
        <a href="#" class="am-icon-btn am-icon-thumbs-o-up am-icon-btn-sm"></a>
        <br>
        <span>233</span>
        <br>
        <a href="#" class="am-icon-btn am-icon-thumbs-o-down am-icon-btn-sm"></a>
      </div>
    </div>

    <div class="am-u-sm-9">
      <div style="display: inline-block;">
        <h2 class="am-monospace" style="margin-bottom: 0px;"><%= @answer.question.title %></h2>
      </div>
      <div style="display: inline-block">
        <% if can? :update, @answer.question %>
            <%= link_to '修改', edit_question_path(@answer.question) %>
        <% end %>
        <% if can? :destroy, @answer.question %>
            <%= link_to '删除', @answer.question, action: :destroy, method: :delete, data: {confirm: 'Really?'} %>
        <% end %>
      </div>
      <p class="am-san-serif am-text-break"><%= @answer.question.content.html_safe%></p>
      <div style="display: inline-block">
        <%= content_tag "a", "#{@answer.question.question_comments.length}条评论", id: "question_comment_link", class:"am-icon-comment-o", style:"font-size:1.4rem; color:#999;",
                        href: "javascript:void(0)",
                        data: {question_id: @answer.question.id} %>
        <%= render 'shared/share_box' %>
      </div>
      <div style="display: inline-block; float: right">
        <span>发布于<%= @answer.question.created_at.strftime("%Y/%m/%d")%></span>
        <%= link_to @answer.question.user.login, @answer.question.user %>
        <span>21</span>
      </div>
      <div id="question_comments_placeholder"></div>
      <hr>
    </div>

    <div id="answer-<%= @answer.id %>">
      <div class="am-g">
        <div class="am-u-sm-3">
          <div style="width: 50px; float: right; text-align: center; padding-top: 5px; padding-right: 20px;">
            <a href="##" class="am-icon-btn am-icon-thumbs-o-up am-icon-btn-sm"></a>
            <br>
            <span>23</span>
            <br>
            <a href="##" class="am-icon-btn am-icon-thumbs-o-down am-icon-btn-sm"></a>
          </div>
        </div>
        <div class="am-u-sm-9">
          <div style="display: inline-block">
            <%= link_to @answer.user.login, @answer.user, data: {'user-login': @answer.user.login}, class: "user-in-answer" %>
            <span>21</span>
          </div>
          <div style="display: inline-block; float: right">
            <% if can? :update, @answer %>
                <%= link_to '修改', edit_question_answer_path(@answer.question, @answer), remote: true %>
            <% end %>
          </div>
          <p class="am-san-serif" style="margin-top: 0;"><%= @answer.content.html_safe%></p>
          <div style="display: inline-block">
            <a id="answer<%= @answer.id %>_comment_link" data-answer-id="<%= @answer.id %>" data-question-id="<%= @answer.question.id %>"
               href="javascript: void(0)" class="am-icon-comment-o" style="font-size:1.4rem; color:#999;"><%= @answer.answer_comments.length %>条评论</a>
            <%= render 'shared/share_box' %>
          </div>
          <div style="display: inline-block; float: right">
            <span>发布于<%= @answer.created_at.strftime("%Y/%m/%d") %></span>
          </div>
          <div id="answer<%= @answer.id %>_comments_placeholder"></div>
          <hr>
        </div>
      </div>
    </div>
<% end %>