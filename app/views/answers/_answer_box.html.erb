<div class="am-u-sm-3"></div>
<div class="am-u-sm-9 am-u-sm-offset-3">
  <div style="display: inline-block; vertical-align: middle">
    <span class="am-monospace" style="font-weight: bold"><%= @answers.length %>个回答</span>
  </div>
  <div style="display: inline-block; float: right; vertical-align: middle">
    <div class="am-dropdown" data-am-dropdown>
      <button class="am-btn am-btn-sm am-btn-xs am-dropdown-toggle" style="background-color: transparent" data-am-dropdown-toggle>综合排序<span class="am-icon-caret-down"></span></button>
      <ul class="am-dropdown-content">
        <li class="am-disabled"><a href="#">综合排序</a></li>
        <li class="am-divider"></li>
        <li><a href="#">时间排序</a></li>
      </ul>
    </div>
  </div>
  <hr>
</div>

<div class="am-u-sm-3">
  <div style="width: 50px; float: right; text-align: center; padding-top: 5px; padding-right: 20px;">
    <a href="##" class="am-icon-btn am-icon-thumbs-o-up am-icon-btn-sm"></a>
    <br>
    <span>23</span>
    <br>
    <a href="##" class="am-icon-btn am-icon-thumbs-o-down am-icon-btn-sm"></a>
  </div>
</div>
<div class="am-u-sm-9">
  <div style="display: inline-block">
    <%= link_to @answer.user.login, @answer.user, data: {'user-login': @answer.user.login}, class: "user-in-answer" %>
    <span>21</span>
  </div>
  <div style="display: inline-block; float: right">
    <% if can? :update, @answer %>
        <%= link_to '修改', edit_question_answer_path(@question, @answer), remote: true %>
    <% end %>
  </div>
  <p class="am-san-serif" style="margin-top: 0;"><%= @answer.content.html_safe%></p>
  <div style="display: inline-block">
    <a id="answer<%= @answer.id %>_comment_link" data-answer-id="<%= @answer.id %>" data-question-id="<%= @question.id %>"
       href="javascript: void(0)"><%= @answer.answer_comments.length %>条评论</a>
    <a href="##">分享</a>
  </div>
  <div style="display: inline-block; float: right">
    <span>发布于<%= @answer.created_at.strftime("%Y/%m/%d") %></span>
  </div>
  <div id="answer<%= @answer.id %>_comments_placeholder"></div>
  <hr>
</div>