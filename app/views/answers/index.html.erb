<div id="answersheader">
  <div class="am-u-sm-3"></div>
  <div class="am-u-sm-9 am-u-sm-offset-3">
    <div style="display: inline-block; vertical-align: middle">
      <span class="am-monospace" style="font-weight: bold; font-size: 1.1em"><%= @answers.length %>个回答</span>
    </div>
    <div style="display: inline-block; float: right; vertical-align: middle">
      <div class="am-dropdown" data-am-dropdown>
        <button id="button_for_sort" class="am-btn am-btn-sm am-btn-xs am-dropdown-toggle" style="background-color: transparent" data-am-dropdown-toggle>综合排序<span class="am-icon-caret-down"></span></button>
        <ul class="am-dropdown-content">
          <li class="am-disabled"><a href="#">综合排序</a></li>
          <li class="am-divider"></li>
          <li><a href="#">时间排序</a></li>
        </ul>
      </div>
    </div>
    <hr>
  </div>
</div>

<div class="am-btn-group doc-js-btn-1" data-am-button>
  <label class="am-btn am-btn-default am-btn-sm am-active">
    <input type="radio" name="options" value="1" id="option1" checked> 综合排序
  </label>
  <label class="am-btn am-btn-default am-btn-sm">
    <input type="radio" name="options" value="2" id="option2"> 时间排序
  </label>
  <label class="am-btn am-btn-default am-btn-sm">
    <input type="radio" name="options" value="3" id="option3"> 迷之排序
  </label>
</div>
<script>
  // 获取选中的值
  $(function() {
    var $radios = $('[name="options"]');
    $radios.on('change',function() {
      console.log('单选框当前选中的是：', $radios.filter(':checked').val());
    });
  });
</script>

<div id="answerslist">
  <% @answers.order("score desc") do |answer| %>
      <% @answer = answer %>
      <%= render "answers/show" %>
  <% end %>
</div>