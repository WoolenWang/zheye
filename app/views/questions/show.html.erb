<div class="am-g am-g-collapse">
  <div class="am-u-sm-2">
    <div style="width: 50px; float: right; text-align: center; padding-top: 5px;">
      <a href="#" class="am-icon-btn am-primary am-icon-arrow-up am-icon-btn-sm"></a>
      <br>
      <span>233</span>
      <br>
      <a href="#" class="am-icon-btn am-primary am-icon-arrow-down am-icon-btn-sm"></a>
    </div>
  </div>
  <div class="am-u-sm-6">
    <div style="display: inline-block;">
      <h2 style="margin-bottom: 0px;"><%= @question.title %></h2>
    </div>
    <div style="display: inline-block">
      <%= link_to '修改', edit_question_path(@question) %>
    </div>
    <p class="am-san-serif am-text-break"><%= @question.content.html_safe%></p>
    <div style="display: inline-block">
      <a href="#" id="comments"><%= @question.question_comments.length %>条评论</a>
      <a href="#">分享</a>
    </div>
    <div style="display: inline-block; float: right">
      <span>发布于<%= @question.created_at.strftime("%Y/%m/%d")%></span>
      <%= link_to @question.user.login, @question.user %>
      <span>21</span>
    </div>
  </div>
  <div class="am-u-sm-2">
    <%= image_tag 'ad_test.png', style: 'width: 90%; float:right' %>
  </div>
  <div class="am-u-sm-2"></div>
</div>
