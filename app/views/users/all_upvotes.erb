<% content_for :head do %>
    <title>我赞成的-者也</title>
<% end %>

<div class="am-u-sm-3"></div>
<div class="am-u-sm-9 am-u-sm-offset-3">
  <span class="am-monospace" style="font-weight: bold; font-size: 1.1em">我赞成的(<%= @upvotes.length %>)</span>
  <hr style="margin-top: 0px;">
</div>
<% @upvotes.each do |upvote| %>
    <% @upvote = upvote %>
    <% if @upvote.type == 'QuestionVote' %>
        <% @question = @upvote.question %>
        <%= render partial: 'questions/question_box', locals: {detail: true} %>
    <% else %>
        <% @answer = @upvote.answer %>
        <%= render partial: 'answers/answer_box', locals: {detail: true} %>
    <% end %>
<% end %>