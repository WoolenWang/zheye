<% content_for :head do %>
    <title><%= @user.login %>的评论-者也</title>
<% end %>

<div class="am-u-sm-3"></div>
<div class="am-u-sm-9 am-u-sm-offset-3">
  <span class="am-monospace" style="font-weight: bold; font-size: 1.1em"><%= @user.login %>的评论(<%= @comments.length %>)</span>
  <hr style="margin-top: 0px;">
</div>
<% @comments.each do |comment| %>
    <% @comment = comment %>
    <% if %>
        <%= render partial: 'questions/question_box', locals: {detail: true} %>
    <% else %>
        <%= render partial: 'answers/answer_box', locals: {detail: true} %>
    <% end %>
<% end %>