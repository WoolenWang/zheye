<% content_for :head do %>
    <title>我反对的-者也</title>
<% end %>

<div class="am-u-sm-3"></div>
<div class="am-u-sm-9 am-u-sm-offset-3">
  <span class="am-monospace" style="font-weight: bold; font-size: 1.1em">我的评论(<%= @downvotes.length %>)</span>
  <hr style="margin-top: 0px;">
</div>
<% @downvotes.each do |downvote| %>
    <% @downvote = downvote %>
    <% if %>
        <%= render partial: 'questions/question_box', locals: {detail: true} %>
    <% else %>
        <%= render partial: 'answers/answer_box', locals: {detail: true} %>
    <% end %>
<% end %>